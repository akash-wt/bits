generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Inbox {
  id        String   @id @default(uuid())
  userId    String   @unique
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  pubKey    String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nonce     String
  Inbox     Inbox[]
}
